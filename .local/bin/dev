
dev_path=~/Workspace/dotfiles/nixos/dev

function enter_shell() {
  nix-shell --run zsh ~/Workspace/dotfiles/nixos/dev/$1.nix
}

case $1 in
  edit)
    [ -z $2 ] && exit 1

    ${EDITOR:-nvim} "$dev_path/$2.nix"
  ;;

  enter)
    [ -z $2 ] && exit 1

    enter_shell $2
  ;;

  *)
    enter_shell $1
  ;;
esac

